{
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "build",
                        "command": "dotnet",
                        "type": "process",
                        "args": [
                                "build",
                                "${workspaceFolder}/GUISharp.sln",
                                "/property:GenerateFullPaths=true",
                                "/consoleloggerparameters:NoSummary"
                        ],
                        "problemMatcher": "$msCompile"
                },
                {
                        "label": "debug",
                        "command": "dotnet",
                        "type": "process",
                        "args": [
                                "debug",
                                "${workspaceFolder}/GUISharp.sln",
                                "/property:GenerateFullPaths=true",
                                "/consoleloggerparameters:NoSummary"
                        ],
                        "problemMatcher": "$msCompile"
                },
                {
                        "label": "watch",
                        "command": "dotnet",
                        "type": "process",
                        "args": [
                                "watch",
                                "run",
                                "${workspaceFolder}/GUISharp.sln",
                                "/property:GenerateFullPaths=true",
                                "/consoleloggerparameters:NoSummary"
                        ],
                        "problemMatcher": "$msCompile"
                }
        ]
}